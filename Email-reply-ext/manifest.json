{
  "manifest_version": 3,
  "name": "Email Reply Generator",
  "version": "1.0",
  "description": "Generate professional email replies inside Gmail",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": [
    "http://localhost:8080/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}
